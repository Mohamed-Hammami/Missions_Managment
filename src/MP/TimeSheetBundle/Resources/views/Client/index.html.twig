{% extends 'MPTimeSheetBundle::layout.html.twig' %}

{% block body -%}
    <h2>Liste des clients</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Secteur d'activite</th>
                <th>Contact principal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('client_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.secteurActivite }}</td>
                <td>{{ entity.mainContact.name~' '~entity.mainContact.surname }}</td>
                <td>
                        {#<a href="{{ path('client_show', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-user"></span>
                        </a>#}
                        <a href="{{ path('client_edit', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style="float: right;">
        <a href="{{ path('client_new') }}">
            <span class="glyphicon glyphicon-plus-sign"></span> nouveau client
        </a>
    </div>
    {% endblock %}

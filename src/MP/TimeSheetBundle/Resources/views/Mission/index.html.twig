    <ul class="nav nav-tabs">
        <li class="active">
            <a data-toggle="tab" href="#onGoing">En cours</a>
        </li>
        <li>
            <a data-toggle="tab" href="#completed">Termin√©es</a>
        </li>
    </ul>

    <div class="tab-content">
        <br>
        <div id="onGoing" class="tab-pane fade in active">
            {{ render(controller('MPTimeSheetBundle:Mission:onGoing')) }}

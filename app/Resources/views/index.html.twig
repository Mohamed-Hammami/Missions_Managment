<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.75">

    <title>{% block title %}Gestion de Missions{% endblock %}</title>
    {% stylesheets  '@bootstrap_css' filter='cssrewrite' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <style>

        span.glyphicon {
            vertical-align: middle;
            margin-top: -5px;
            font-size:1.5em;
        }

        body {
            font-family: sans-serif;
        }

        .form-group {
            width: 80%;
        }

    </style>
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('accueil') }}">Gestion de Mission</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div>
                {% block navigation %}

                {% endblock %}
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('logout') }}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    <li>
                        <a href="{{ path('associate_my_account') }}">
                            <span class="glyphicon glyphicon-cog"></span>
                            Mon compte
                        </a>
                    </li>
                </ul>
            </div>
            {% endif %}
        </div>
        <!-- /.container -->
    </nav>
    <div class="container">
        <!-- Page Content -->
            {% block body %}

            {% endblock %}
    </div>
    <!-- /.container -->
   <!-- <footer class="footer navbar-inverse">
        <div class="container">
            <p class="text-muted credit">created by Mohamed Hammami 2015</p>
        </div>
    </footer>-->

    {% javascripts  '@jquery' '@bootstrap_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts  %}
</body>

</html>
